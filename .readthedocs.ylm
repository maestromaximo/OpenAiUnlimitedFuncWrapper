# .readthedocs.yml
# Read the Docs configuration file
# See https://docs.readthedocs.io/en/stable/config-file/v2.html for details

version: 2

# MkDocs configuration.
# The configuration for MkDocs must be in a 'mkdocs.yml' at the root of the repository.
mkdocs:
  configuration: mkdocs.yml  # Path to MkDocs configuration file

# Optionally set the Python version and requirements
python:
  version: 3.8
  install:
    - requirements: docs/requirements.txt  # Path to requirements file
